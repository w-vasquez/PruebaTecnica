@using Microsoft.AspNetCore.Identity
@using PruebaTecnica.Areas.Identity.Data

@inject SignInManager<PruebaTecnicaUser> SignInManager
@inject UserManager<PruebaTecnicaUser> UserManager
    
    
@if (SignInManager.IsSignedIn(User))
{
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                            
                    </ul>
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a id="manage" class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello! @UserManager.GetUserName(User)</a>
                        </li>
                        <li class="nav-item">
                            <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                                <button id="logout" type="submit" class="nav-link btn btn-link text-dark"><img src="~/icons/power.svg" alt="Alternate Text" /></button>
                            </form>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
}
    
